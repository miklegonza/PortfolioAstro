---
interface Props {
    full_name: string;
    html_url: string;
    languages: string[];
    description: string;
}

const { full_name, html_url, languages, description } = Astro.props;
---

<div class="flex flex-col w-full border rounded-lg h-full shadow bg-white/5 border-white/10 text-pretty">
    <a href="#">
        <!-- <img
            class="rounded-t-lg"
            src="https://img.freepik.com/fotos-premium/oficina-estilo-moderno-suelo-hormigon-visto-muchas-plantas-representacion-3d_651547-217.jpg"
            alt=""
        /> -->
    </a>
    <div class="p-5">
        <a href="#">
            <h5 class="mb-2 text-base font-bold tracking-tight text-white">
                {full_name}
            </h5>
        </a>
        <p class="mb-3 text-sm font-normal text-gray-400">
            {description}
        </p>
        <p class="mb-3 text-xs font-normal text-gray-400">
            | 
            {
                languages.map(language => (
                    language + " | "
                ))
            }
        </p>
        <a
            href=`${html_url}`
            target="_blank"
            class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-center text-white rounded-lg focus:ring-4 focus:outline-none bg-blue-600 hover:bg-blue-700 focus:ring-blue-800"
        >
            Read more
            <svg
                class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"></path>
            </svg>
        </a>
    </div>
</div>
